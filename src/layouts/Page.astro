---
import Base from "@layouts/Base.astro";
import Navbar from "@components/Navbar.astro";
import Drawer from "@components/Drawer.astro";
import Footer from "@components/Footer.astro";

export interface Props {
    title?: string;
    description?: string;
    thumbnail?: string;
}

const {
    title = "DashGL Page",
    description = "Page Description",
    thumbnail = `${Astro.site}/card.png`,
} = Astro.props;
---

<Base title={title} description={description} image={thumbnail}>
    <Drawer />
    <Navbar />
    <article class="pt-16">
        <slot />
    </article>
    <Footer />
</Base>
