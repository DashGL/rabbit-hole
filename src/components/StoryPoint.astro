---
import { Image } from "astro:assets";

export interface Props {
    title: string;
    imagePath: string;
    chapter: string;
}
const { title, imagePath, chapter } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
    "/src/assets/*.{jpeg,jpg,png,gif}",
);
console.log(images);
---

<li>
    <div class="timeline-middle">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="h-5 w-5"
            ><path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                clip-rule="evenodd"></path></svg
        >
    </div>
    <div
        class:list={[
            chapter.toLowerCase().includes("start")
                ? "timeline-start"
                : "timeline-end",
            "md:text-end mb-10",
        ]}
    >
        <time class="font-mono italic">{chapter}</time>
        <div class="text-lg font-black">{title}</div>
        <Image
            src={images[`/src/assets/${imagePath}`]!()}
            class="rounded-lg"
            alt="A bird sitting on a nest of eggs."
        />
        The start of Kion's adventure where he gets pulled into his computer at 4:04
        AM.
    </div>
    <hr />
</li>
